<nav-bar transparent="{{hideNav}}" bindready="getNavHeight">
    <view slot="nav" class="store-name">{{detail.storeName}}</view>
    <view slot="addones" class="store-desc">
        <view>{{detail.storeDesc}}</view>
        <navigator hover-class="none" url="">更多</navigator>
    </view>
    <tabs slot="addones" class="{{hideNav?'hidden':''}}" under-line-ratio="{{.5}}" tabs="{{['首页','所有服务','最新']}}" active="{{tabIndex}}" bindchange="tabChange"></tabs>
</nav-bar>

<swiper bindchange="onSwiperChange" current="{{tabIndex}}" duration="300" style="height:{{swiperHeight}}px;">
    <swiper-item>
        <scroll-view
            style="height:{{swiperHeight}}px" 
            scroll-y="true" 
            enable-back-to-top="true"> 
            <image class="store-detail" mode="widthFix" src="{{detail.homepage}}"></image>
        </scroll-view>
    </swiper-item>
    <swiper-item>
        <scroll-view
            style="height:{{swiperHeight}}px" 
            scroll-y="true" 
            enable-back-to-top="true"> 
            <service-card appearance="goods" wx:for="{{services.list}}" data="{{item}}"></service-card>
        </scroll-view>
    </swiper-item>
    <swiper-item>
        <scroll-view
            style="height:{{swiperHeight}}px" 
            scroll-y="true" 
            enable-back-to-top="true"> 
            <service-card appearance="goods" wx:for="{{services.list}}" data="{{item}}"></service-card>
        </scroll-view>
    </swiper-item>
</swiper>

<action-bar>
  <view class="store-info">
      <image mode="aspectFill" src="{{detail.storeLogo}}"></image>
      <text>成交量{{detail.tradeNums}}</text>
      <text>收藏数{{detail.collectNums}}</text>
  </view>
  <view class="action {{detail.collectFlag==='1'?'lighten':''}}" bindtap="collect">
      <view class="iconfont icon-{{detail.collectFlag==='1'?'yishoucang':'shoucang1'}}"></view>
      <view class="name">收藏</view>
  </view>
   <view class="action" bindtap="download">
      <view class="iconfont icon-kefu"></view>
      <view class="name">联系TA</view>
  </view>
</action-bar>