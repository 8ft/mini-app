<view class="qa" data-url="/packageQa/pages/detail/index?id={{qa.id}}&uid={{qa.userId}}" bindtap="goDetail">
  <view class='title'><text class='reward'>￥{{qa.rewardAmountYuan}}元</text><text>{{qa.questionName}}</text></view>
  <view class='tags'>
    <label class='type'>{{qa.subTypeName}}</label>
    <label wx:if="{{qa.skillTag.length>0}}" wx:for="{{qa.skillTag}}">{{item}}</label>
  </view>
  <view class="other-info">
    <block wx:if="{{qa.answerUsers.length>0}}">
      <image wx:for="{{qa.answerUsers}}" mode="aspectFill" src="{{item.userAvatar}}"></image>
      <view class="tip" style="margin-left:{{imgsWidth}}rpx;">{{qa.answerUsers.length>1?'等'+qa.answerUsers.length+'人':''}}参与了讨论</view>
    </block>

    <block wx:elif="{{qa.answerUsers.length===0}}">
      <image mode="aspectFill" src="{{qa.userAvatar}}"></image>
      <view class="tip" style="margin-left:70rpx;">{{qa.nickName}}发起提问</view>
    </block>

    <view wx:if="{{qa.questionState===10||qa.questionState===20}}" class="status">{{qa.questionStateName}}</view>
    <block wx:elif="{{qa.questionState!==10&&qa.questionState!==20}}">
      <view class="iconfont icon-liulan"></view>
      <view class='read'>{{qa.viewNum}}</view>
    </block>
  </view>
</view>
