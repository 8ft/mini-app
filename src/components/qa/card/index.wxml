<view class="qa {{appearance}}" data-url="/packageQa/pages/detail/index?id={{data.id}}&uid={{data.userId}}" bindtap="_goDetail">
  <view class='title'><text class='reward' wx:if="{{data.rewardAmount>0}}">￥{{data.rewardAmountYuan}}元</text><text>{{data.questionName}}</text></view>
  <view class="tags">
    <view class='skills'>
      <label class='type'>{{data.subTypeName}}</label>
      <label wx:if="{{data.skillTag.length>0}}" wx:for="{{data.skillTag}}">{{item}}</label>
    </view>
    <view wx:if="{{activeUI[data.questionState].status}}" class="status">{{data.questionStateName}}</view>
  </view>

  <view class="other-info" wx:if="{{appearance!=='myQuestions'}}">
    <block wx:if="{{data.answerUsers.length>0}}">
      <image wx:for="{{data.answerUsers}}" mode="aspectFill" src="{{item.userAvatar}}"></image>
      <view class="tip" style="margin-left:{{imgsWidth}}rpx;">{{data.answerUserNum>4?'等'+data.answerUserNum+'人':''}}参与了讨论</view>
    </block>

    <block wx:elif="{{data.answerUsers.length===0}}">
      <image mode="aspectFill" src="{{data.userAvatar}}"></image>
      <view class="tip" style="margin-left:70rpx;">{{data.nickName}}发起提问</view>
    </block>
    
    <block wx:if="{{appearance!=='myAnswers'&&appearance!=='collection'&&activeUI[data.questionState].viewer}}">
      <view class="iconfont icon-liulan"></view>
      <view class='read'>{{data.viewNum}}</view>
    </block>

    <view wx:if="{{appearance==='myAnswers'}}" class="del" catchtap="_delete">删除</view>
  </view>

   <view wx:if="{{appearance==='collection'}}" class="collect" catchtap="_collect">
      <text class="iconfont icon-{{data.collectFlag=='1'?'yishoucang':'shoucang1'}}"></text>
      {{data.collectFlag=='1'?'已收藏':'收藏'}}
    </view>

</view>
