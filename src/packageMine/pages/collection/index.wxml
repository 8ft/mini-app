<nav-bar title="我的收藏">
  <tabs slot="addones" under-line-ratio="{{.8}}" tabs="{{['人才','服务','店铺','文章']}}" active="{{typeIndex}}" bindchange="switchList"></tabs>
</nav-bar>

<view class="content">
  <block wx:if="{{typeIndex===0}}">
      <expert-card wx:for="{{experts.list}}" index="{{index}}" data="{{item}}" remarkable="true" bindcollect="updateExpert" bindremark="updateExpert"></expert-card>
      <nodata wx:if="{{!loading&&experts.list.length===0}}"></nodata>
  </block>

  <block wx:elif="{{typeIndex===1}}">
    <service-card appearance="collection" wx:for="{{services.list}}" data="{{item}}"></service-card>
    <nodata wx:if="{{!loading&&services.list.length===0}}"></nodata>
  </block>

  <block wx:elif="{{typeIndex===2}}">
    <store-card wx:for="{{stores.list}}" data="{{item}}" bindcollect="updateStore"></store-card>
    <nodata wx:if="{{!loading&&stores.list.length===0}}"></nodata>
  </block>

  <block wx:elif="{{typeIndex===3}}">
    <blog-card custom-class="reset-blog-card" wx:for="{{articles.list}}" data="{{item}}" show-author="true"></blog-card>
    <nodata wx:if="{{!loading&&articles.list.length===0}}"></nodata>
  </block>

  
</view>
