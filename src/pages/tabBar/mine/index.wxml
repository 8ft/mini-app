<!--index.wxml-->

<view class="userinfo" wx:if="{{!props.stores.account.logged_in}}">
    <view class="base">
        <text class='nickName'>探索未知~</text>
        <navigator url='/pages/user/wxLogin/index' hover-class='none'>登录/注册</navigator>
        <image class='avatar' src='/assets/img/default/avatar.png'></image>
    </view>
</view>

<view class="userinfo" wx:else>
  <view class="base">
    <view class='nickName'><text>{{props.stores.account.userInfo.nickName}}</text><view class="iconfont icon-xingbie{{props.stores.account.userInfo.userBaseInfo.sex===1?'nan':'nv'}}"></view></view>
    <view class='finished'><image src='/assets/img/mine/icon_my_project@3x.png'></image>已完成{{props.stores.account.userInfo.finishOrderNums}}单</view>
    <image class='avatar' src="{{props.stores.account.userInfo.userAvatar||'/assets/img/default/avatar.png'}}"></image>
  </view>
  <view class="blog">
    <navigator hover-class="none" url="/pages/mine/follow/index?id={{props.stores.account.userInfo.userId}}">
        <text>{{props.stores.account.blogInfo.attentionNum}}</text>
        <text>关注</text>
    </navigator>
    <navigator hover-class="none" url="/pages/mine/fans/index?id={{props.stores.account.userInfo.userId}}">
        <text>{{props.stores.account.blogInfo.fansNum}}</text>
        <text>粉丝</text>
    </navigator>
    <navigator hover-class="none" url="/pages/mine/blogs/index">
        <text>{{props.stores.account.blogInfo.articleNum}}</text>
        <text>博文</text>
    </navigator>
  </view>
</view>

<view class='entrances' bindtap='go' data-url="/pages/mine/personalInfo/index/index">
    <image src='/assets/img/mine/mine_grzy@3x.png'></image>
    个人主页
    <text class='arrow-right'>{{props.stores.account.stateCn}}</text>
</view>

<view class='entrances' bindtap='go' data-url="/pages/mine/experts/index">
    <image src='/assets/img/mine/icon_my_talentpool@3x.png'></image>
    我的人才库
    <text class='arrow-right'></text>
</view>

<view class='entrances' bindtap='go' data-url="/pages/mine/wallet/index">
    <image src='/assets/img/mine/mine_wdqb@3x.png'></image>
    我的钱包
    <text class='arrow-right'>{{props.stores.account.logged_in?props.stores.account.userInfo.balance+'元':''}}</text>
</view>

<button class='entrances' open-type="share" bindtap='onShareAppMessage'>
    <image src='/assets/img/mine/mine_yqhy@3x.png'></image>
    邀请好友
    <text class='arrow-right'></text>
</button>

<view class='entrances' style='margin-top:30rpx;' wx:if="{{props.stores.account.logged_in}}" bindtap='logout'>
    <image src='/assets/img/mine/mine_sz@3x.png'></image>
    退出当前账号
    <text class='arrow-right'></text>
</view>
